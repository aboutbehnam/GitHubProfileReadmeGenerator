<Window x:Class="GitHubProfileReadmeGenerator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHubProfileReadmeGenerator"
        xmlns:viewModels="clr-namespace:GitHubProfileReadmeGenerator.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        Title="GitHub Profile README Generator" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
    Background="{DynamicResource PrimaryBackgroundBrush}">

    <Window.Resources>
        <!-- Styles now use DynamicResource to support live theme switching -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5,10,5,0"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: User Input Form -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Appearance Controls -->
                <TextBlock Text="Appearance Settings" FontWeight="Bold" Margin="5,0,5,0"/>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Theme:" VerticalAlignment="Center"/>
                    <RadioButton Content="Dark" IsChecked="True" Margin="10,0" GroupName="Theme" Command="{Binding ChangeThemeCommand}" Foreground="{DynamicResource PrimaryForegroundBrush}">
                        <RadioButton.CommandParameter>
                            <local:AppTheme>Dark</local:AppTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton Content="Light" GroupName="Theme" Command="{Binding ChangeThemeCommand}" Foreground="{DynamicResource PrimaryForegroundBrush}">
                        <RadioButton.CommandParameter>
                            <local:AppTheme>Light</local:AppTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton Content="Colorful" Margin="10,0" GroupName="Theme" Command="{Binding ChangeThemeCommand}" Foreground="{DynamicResource PrimaryForegroundBrush}">
                        <RadioButton.CommandParameter>
                            <local:AppTheme>Colorful</local:AppTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                </StackPanel>

                <TextBlock Text="Preview Font Size:" Margin="5,15,5,0"/>
                <Slider Minimum="8" Maximum="24" Value="{Binding PreviewFontSize, Mode=TwoWay}" Margin="5" TickFrequency="1" IsSnapToTickEnabled="True"/>

                <!-- Profile Information -->
                <TextBlock Text="Name:" Margin="5,20,5,0"/>
                <TextBox Text="{Binding UserProfile.Name, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Tagline / Role:"/>
                <TextBox Text="{Binding UserProfile.Tagline, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="GitHub Username:"/>
                <TextBox Text="{Binding UserProfile.GitHubUsername, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="About Me Section:"/>
                <TextBox Text="{Binding UserProfile.AboutMe, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" MinHeight="100" AcceptsReturn="True"/>

                <TextBlock Text="GitHub Stats Options:"/>
                <CheckBox IsChecked="{Binding UserProfile.ShowGitHubStats}" Content="Show GitHub Stats Card"/>
                <CheckBox IsChecked="{Binding UserProfile.ShowTopLanguages}" Content="Show Top Languages Card"/>

                <!-- Skills List -->
                <TextBlock Text="Skills &amp; Tools:" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding UserProfile.Skills}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding PlatformName, UpdateSourceTrigger=PropertyChanged}" ToolTip="e.g., CSharp, Docker, JavaScript"/>
                                <Button Grid.Column="1" Content="Remove" Command="{Binding DataContext.RemoveSkillCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Background="{DynamicResource ErrorBrush}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Add Skill" Command="{Binding AddSkillCommand}"/>

                <!-- Socials List -->
                <TextBlock Text="Social Links:" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding UserProfile.Socials}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding PlatformName, UpdateSourceTrigger=PropertyChanged}" ToolTip="e.g., LinkedIn, Twitter"/>
                                <TextBox Grid.Column="1" Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" ToolTip="Full URL"/>
                                <Button Grid.Column="2" Content="Remove" Command="{Binding DataContext.RemoveSocialCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Background="{DynamicResource ErrorBrush}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Add Social Link" Command="{Binding AddSocialCommand}"/>
            </StackPanel>
        </ScrollViewer>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#FF444444"/>

        <!-- Right Column: Generated README Preview and Actions -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0"
                     x:Name="ReadmePreview"
                     Text="{Binding GeneratedReadme, Mode=OneWay}"
                     FontSize="{Binding PreviewFontSize}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Generate README" Command="{Binding GenerateReadmeCommand}" FontWeight="Bold" Background="{DynamicResource SuccessBrush}"/>
                <Button Content="Copy to Clipboard" Command="{Binding CopyReadmeCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>